{
  "scripts": {
    "lint": "eslint . --ext .js,.ts,.vue",
    "lint:backend": "eslint ./backend --ext .js,.ts,.vue",
    "lint:staff": "eslint ./frontend/staff --ext .js,.ts,.vue",
    "lint:survey": "eslint ./frontend/survey --ext .js,.ts,.vue",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:check:backend": "prettier --check ./backend",
    "format:check:staff": "prettier --check ./frontend/staff",
    "format:check:survey": "prettier --check ./frontend/survey",
    "dev:staff": "pnpm --filter=!frontend/survey -r dev",
    "dev:survey": "pnpm --filter=!frontend/staff -r dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.22.0",
    "lefthook": "^1.6.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.3.3",
    "vue-eslint-parser": "^9.4.2"
  }
}
