{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "preserveValueImports": false,
    "isolatedModules": false,
    "importsNotUsedAsValues": "preserve"
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
