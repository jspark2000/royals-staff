<!DOCTYPE html>
<html>
  <head>
    <%- include('../../../common/admin-html-head') %>
  </head>
  <body>
    <%- include('../../../components/admin-page-header', { userInfo } ) %> <%- include('../../../components/admin-page-sidebar', { select: 'game', select_child: 'game/list' } ) %>

    <main id="main" class="main">
      <div class="pagetitle">
        <h1>시합후기 작성현황</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">관리자 페이지</a></li>
            <li class="breadcrumb-item active">시합후기 작성현황</li>
          </ol>
        </nav>
      </div>
      <!-- End Page Title -->

      <section class="section">
        <div class="row align-items-top">
          <!-- Game Review Table -->
          <div class="col-lg-12">
            <div class="card recent-sales overflow-auto">
              <div class="card-body">
                <h5 class="card-title"><%=gameInfo.gameName%> <span>| <%=gameInfo.gameDate.toISOString().slice(0, 10)%></span></h5>

                <table class="table table-borderless datatable">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">이름</th>
                      <th scope="col">입학년도</th>
                      <th scope="col">상태</th>
                      <th scope="col">제출시간</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% gameReviewList.forEach((gameReview, index) => { %>
                      <tr>
                        <td scope="row"><a href="#"><%=index + 1%></a></td>
                        <td><%=gameReview.name%></td>
                        <td><%=gameReview.studentNo%></td>
                        <td><span class="<%=(gameReview.submission) ? (gameReview.late) ? 'badge bg-warning' : 'badge bg-success' : 'badge bg-danger'%>"><%=(gameReview.submission) ? (gameReview.late) ? "지각제출" : "제출완료" : "미제출"%></span></td>
                        <td><%=gameReview.time?.toLocaleString()%></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- End Game Review Table -->
        </div>
      </section>
    </main>
    <!-- End #main -->

    <%- include('../../../common/admin-footer') %>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <%- include('../../../common/admin-js') %>
  </body>
</html>
